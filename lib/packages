#!/usr/bin/env bash

u_header "package"

u_print "Installing packages..."

if [[ "$NO_PACKAGES" = true ]]; then
  u_skip
  return
fi

new_line 3>&5 4>&6

# Browsers
sleep 0.1 && source $DOTFILES_DIRECTORY/packages/chrome

# Editors
sleep 0.1 && source $DOTFILES_DIRECTORY/packages/emacs

# Social
sleep 0.1 && source $DOTFILES_DIRECTORY/packages/skype
sleep 0.1 && source $DOTFILES_DIRECTORY/packages/slack

# Utility
sleep 0.1 && source $DOTFILES_DIRECTORY/packages/qbittorrent  # A torrent client
sleep 0.1 && source $DOTFILES_DIRECTORY/packages/deadbeef     # An audio player
sleep 0.1 && source $DOTFILES_DIRECTORY/packages/mpv          # A video player

u_exit_header
