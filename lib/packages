#!/usr/bin/env bash

u_header "package"

#-- Utilities --------------------------------------------------------------------------------------
function load_package() {
  sleep 0.1
  source "$DOTFILES_DIRECTORY/packages/$1"
}

#-- Poll confirmation ------------------------------------------------------------------------------
u_print "Installing packages..."

if [[ "$NO_PACKAGES" = true ]]; then
  u_skip && return
fi

new_line 3>&5 4>&6

#-- Packages ---------------------------------------------------------------------------------------

# Browsers
load_package "chrome"

# Editors
load_package "emacs"

# Scripts
load_package "nvm"

# Social
load_package "skype"
load_package "slack"

# Utility
load_package "qbittorrent"  # A torrent client
load_package "deadbeef"     # An audio player
load_package "mpv"          # A video player

u_exit_header
