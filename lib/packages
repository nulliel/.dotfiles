#source $DOTFILES_DIRECTORY/package/emacs

# Social
#source $DOTFILES_DIRECTORY/package/skype
#source $DOTFILES_DIRECTORY/package/slack

# Utility
#source $DOTFILES_DIRECTORY/package/qbittorrent

#source $DOTFILES_DIRECTORY/package/deadbeef

