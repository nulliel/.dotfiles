#!/usr/bin/env bash

u_header "package"

u_print "Installing packages..."

if [[ "$NO_PACKAGES" = true ]]; then
  u_skip
  return
fi

new_line 3>&5 4>&6

# Browsers
sleep 0.1
source $DOTFILES_DIRECTORY/packages/chrome

# Editors
source $DOTFILES_DIRECTORY/packages/emacs

# Social
source $DOTFILES_DIRECTORY/packages/skype
#source $DOTFILES_DIRECTORY/package/slack

# Utility
source $DOTFILES_DIRECTORY/packages/qbittorrent  # A torrent client
source $DOTFILES_DIRECTORY/packages/deadbeef     # An audio player

u_exit_header
