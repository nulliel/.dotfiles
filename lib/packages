#!/usr/bin/env bash

u_header "package"

u_print "Installing packages..."

if [[ "$NO_PACKAGES" = true ]]; then
  u_skip
  return
fi

new_line 3>&5 4>&6

#-- Check for existing installation ----------------------------------------------------------------

#-- Confirm Installation ---------------------------------------------------------------------------

# Browsers
sleep 0.1
source $DOTFILES_DIRECTORY/packages/chrome

