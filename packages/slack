#!/usr/bin/env bash

subheader "slack"

#-- Config -----------------------------------------------------------------------------------------
local rpm_source="https://downloads.slack-edge.com/linux_releases/slack-2.2.1-0.1.fc21.x86_64.rpm"

#-- Check for existing installation ----------------------------------------------------------------
if command_exists slack; then
  skip "Installing slack..."
  exit_subheader && return
fi

#-- Confirm installation ---------------------------------------------------------------------------
if ! confirm_default "Install slack?"; then
  skip "Installing slack..."
  exit_subheader && return
fi

#-- Dependencies -----------------------------------------------------------------------------------
package_install "libappindicator"

#-- Install ----------------------------------------------------------------------------------------
install_rpm "$rpm_source"

exit_subheader
