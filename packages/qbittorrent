#!/usr/bin/env bash

subheader "qbittorrent"

#-- Check for existing installation ----------------------------------------------------------------
if command_exists qbittorrent; then
  skip "Installing qbittorrent..."
  exit_subheader && return
fi

#-- Confirm installation ---------------------------------------------------------------------------
if ! confirm_default "Install qbittorrent?"; then
  skip "Installing qbittorrent..."
  exit_subheader && return
fi

#-- Install ----------------------------------------------------------------------------------------
package_install "qbittorrent"

exit_subheader
