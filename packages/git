#!/usr/bin/env bash

printf "Installing git..."

if pacman -Q "git" >/dev/null 2>&1 || command -v "git" >/dev/null 2>&1; then
  printf "\033[1;93mSKIPPING\033[0m\n"
  return
fi

sudo pacman -Syu --noconfirm "git" >/dev/null 2>&1 || {
  printf "\033[1;91mERROR\033[0m\n"
  exit
}

printf "\033[1;92mOK\033[0m\n"
