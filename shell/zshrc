# -- Antigen ---------------------------------------------------------------------------------------
source ~/.antigen.zsh

antigen use oh-my-zsh

antigen bundles <<EOBUNDLES
  git
  git-extras
  knife
  npm
  ssh-agent
  sudo
  vagrant
  zsh-users/zsh-autosuggestions
  zsh-users/zsh-completions
  zsh-users/zsh-syntax-highlighting
EOBUNDLES

antigen theme cloud

antigen apply

# -- Aliases ---------------------------------------------------------------------------------------
if [[ -f "$HOME/.bash_aliases" ]]; then
    source $HOME/.bash_aliases
fi
